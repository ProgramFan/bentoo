{
    "project": {
        "name": "TemplateGeneration",
        "comment": "Demo for template-based test case generation",
        "dimensions": ["nnodes", "nthreads"]
    },
    "test_matrix": {
        "dimensions": {
            "names": ["nnodes", "nthreads"],
            "values": {
                "nnodes": [1, 2, 4, 8],
                "nthreads": [1, 6]
            }
        },
        "test_case_generator": "template",
        "template": {
            "cmd": ["ls", "-l", "${project_root}"],
            "envs": {
                "LS_COLORS": "",
                "OMP_NUM_THREADS": "${nthreads}"
            },
            "run": {
                "nnodes": "${nnodes}",
                "procs_per_node": "12 / ${nthreads}",
                "tasks_per_proc": "${nthreads}",
                "nprocs": "${nnodes} * 12 / ${nthreads}"
            },
            "results": ["STDOUT"]
        }
    }
}
