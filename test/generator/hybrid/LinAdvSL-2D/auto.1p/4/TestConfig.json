{
    "test_matrix": {
        "dimensions": {
            "names": ["intra_node"],
            "values": {
                "intra_node": ["12x1x1"]
            }
        },
        "test_case_generator": "template",
        "template": {
            "cmd": [
                "${project_root}/${app}/bin/main2d.lite",
                "${project_root}/${app}/input/linadv-2d.input"
            ],
            "envs": {
                "GLEX_USE_ZC_RNDV": "0",
                "JASMIN_NUM_DSM_THREADS": 1,
                "JASMIN_NUM_SMP_THREADS": 1
            },
            "run": {
                "nnodes": "${nnodes}",
                "procs_per_node": 12,
                "tasks_per_proc": 1,
                "nprocs": "${nnodes}"
            },
            "results": ["LinAdvSL-linadv_2d.log"]
        }
    }
}
